	<div class="card" style="width: 18rem;">
		<div class="card-body">
			<h5 class="card-title">Card title</h5>
			<div id="map-sidebar" style="margin-top: 10px"></div>
		</div>
	</div>
	*@
	<div id="viewDiv"></div>
</div>

@section Scripts {
	<script src="~/js/map.js" type="text/javascript"></script>
}