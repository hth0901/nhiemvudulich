@{
	ViewData["Title"] = "Bản đồ du lịch - dịch vụ";
}

@section Css {
	<link rel="stylesheet" href="~/css/style.css" />
}

<div class="map-container">
	<div id="map-slider" class="card map-sidebar toggle-display">
		<div class="card-body">
			<h5 class="card-title" style="cursor: pointer" id="map-sidebar-header"><i class="ft-arrow-left"></i>&nbsp;&nbsp;lớp bản đồ</h5>
			<div id="map-sidebar" style="margin-top: 10px"></div>
		</div>
	</div>
	<div id="filter-slider" class="card map-sidebar toggle-display">
		<div class="card-body">
			<h5 class="card-title" style="cursor: pointer" id="filter-sidebar-header"><i class="ft-arrow-left"></i>&nbsp;&nbsp;Tìm kiếm nâng cao</h5>
			<div id="filter-sidebar" class="m-custom-group" style="margin-top: 10px">
				<div class="row">
					<div class="col-lg-4 m-custom-col">
						<fieldset class="form-group">
							<label class="d-block">Loại tìm kiếm</label>
							<select class="form-control select2-hidesearch" id="filter-type-slt">
								<option value="nc" selected>Tìm kiếm nâng cao</option>
								<option value="xq">Tìm kiếm xung quanh</option>
							</select>
						</fieldset>
					</div>
					<div class="col-lg-4 m-custom-col">
						<fieldset class="form-group">
							<label class="d-block">Lĩnh vực</label>
							<select class="form-control select2-hidesearch" id="filter-lv-slt">
							</select>
						</fieldset>
					</div>
					<div class="col-lg-4 m-custom-col" id="filter-lh-slt-wrapper">
						<fieldset class="form-group">
							<label class="d-block">Loại hình</label>
							<select class="form-control select2 hidesearch" id="filter-lh-slt">
							</select>
						</fieldset>
					</div>
					<section class="w-100" id="adv-filter-content">
						<div class="col-12 m-custom-col">
							<fieldset class="form-group">
								<label>Tìm kiếm</label>
								<input type="text" class="form-control" id="search-input">
							</fieldset>
						</div>
						<div class="col-12 m-custom-col d-none" id="tenDoanhNghiepWrapper">
							<fieldset class="form-group">
								<label>Tên doanh nghiệp</label>
								<input type="text" class="form-control" id="ten-dn-input">
							</fieldset>
						</div>
						<section class="col-12 m-custom-col" id="adv-diemdulich">
							<div class="row">
								<div class="col-12 m-custom-col">
									<label>Địa chỉ</label>
								</div>
								<div class="col-lg-4 m-custom-col" id="filter-ch-wrapper">
									<fieldset class="form-group">
										<select class="form-control select2" id="filter-ddl-ch-slt">
										</select>
									</fieldset>
								</div>
								<div class="col-lg-4 m-custom-col" id="filter-cx-wrapper">
									<fieldset class="form-group">
										<select class="form-control select2" id="filter-ddl-cx-slt">
										</select>
									</fieldset>
								</div>
								<div class="col-lg-4 m-custom-col" id="filter-td-wrapper">
									<fieldset class="form-group">
										<input type="text" class="form-control" id="filter-ddl-duong-input" placeholder="Nhập tên đường phố">
									</fieldset>
								</div>
							</div>
							<div class="row d-none" id="filter-pl-wrapper">
								<div class="col-12 m-custom-col">
									<label>Phân loại</label>
								</div>
								<div class="col-12 m-custom-col btn-filter-group">
									<div class="row" id="filter-pl-content">
									</div>
								</div>
							</div>
							<div class="row d-none" id="filter-cslt-wrapper">
								<div class="col-12 m-custom-col">
									<label>Loại phòng</label>
								</div>
								<div class="col-12 m-custom-col btn-filter-group">
									<div class="row" id="filter-cslt-lp-content">
									</div>
								</div>
								<div class="col-12 m-custom-col">
									<label>Dịch vụ</label>
								</div>
								<div class="col-12 m-custom-col btn-filter-group">
									<div class="row" id="filter-cslt-dv-content">
									</div>
								</div>
								<div class="col-12 m-custom-col">
									<label>Hạng sao</label>
								</div>
								<div class="col-12 m-custom-col btn-filter-group">
									<div class="row" id="filter-cslt-hs-content">
										<div class="col-12 col-md-6 col-lg-4 col-xl-3 btn-filter-item m-custom-col">
											<button type="button" class="btn filter-selector" data-fid="1">
												1 sao
											</button>
										</div>
										<div class="col-12 col-md-6 col-lg-4 col-xl-3 btn-filter-item m-custom-col">
											<button type="button" class="btn filter-selector" data-fid="2">
												2 sao
											</button>
										</div>
										<div class="col-12 col-md-6 col-lg-4 col-xl-3 btn-filter-item m-custom-col">
											<button type="button" class="btn filter-selector" data-fid="3">
												3 sao
											</button>
										</div>
										<div class="col-12 col-md-6 col-lg-4 col-xl-3 btn-filter-item m-custom-col">
											<button type="button" class="btn filter-selector" data-fid="4">
												4 sao
											</button>
										</div>
										<div class="col-12 col-md-6 col-lg-4 col-xl-3 btn-filter-item m-custom-col">
											<button type="button" class="btn filter-selector" data-fid="5">
												5 sao
											</button>
										</div>
									</div>
								</div>
							</div>
							<div class="row d-none" id="filter-adv-pa-wrapper">
								<div class="col-12 m-custom-col">
									<label>Lĩnh vực</label>
								</div>
								<div class="col-12 m-custom-col">
									<fieldset class="form-group">
										<select class="form-control select2" id="filter-ddl-pa-slt">
										</select>
									</fieldset>
								</div>
							</div>
							<div class="row d-none" id="filter-adv-le-hoi-wrapper">
								<div class="col-12 m-custom-col">
									<label>Loại lễ hội</label>
								</div>
								<div class="col-12 m-custom-col">
									<fieldset class="form-group">
										<select class="form-control select2" id="filter-ddl-le-hoi-slt">
										</select>
									</fieldset>
								</div>
							</div>
						</section>
					</section>
					<section class="w-100 d-none" id="adv-filter-xq-content">
						<div class="col-12 m-custom-col">
							<fieldset class="form-group">
								<label>Bán kính tìm kiếm <span id="displayRadiusUnit">(m)</span></label>
								<input type="number" class="form-control" value="100" min="10" max="5000" id="bk-input">
								<p>
									<small class="text-muted">Giá trị tối thiểu là <span id="displayRadiusMinValue">5</span> và tối đa là <span id="displayRadiusMaxValue">5</span></small>.
									<small class="text-muted">Hệ thống sẽ tìm kiếm dựa trên giá trị này.</small>
								</p>
							</fieldset>
						</div>
					</section>
					<div class="col-12 d-flex justify-content-end m-custom-col">
						<button type="button" class="btn btn-primary m-primary-color btn-min-width mr-1 mb-1" id="filter-btn">Tìm kiếm</button>
						<button type="button" class="btn btn-outline-light mb-1" id="filter-cancel-btn">Hủy</button>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div id="result-slider" class="card map-sidebar toggle-display">
		<div class="card-body">
			<h5 class="card-title" style="cursor: pointer" id="result-sidebar-header"><i class="ft-arrow-left"></i>&nbsp;&nbsp;Kết quả tìm kiếm</h5>
			<div id="result-sidebar" class="m-custom-group" style="margin-top: 10px">
				<div class="row" id="result-content">
				</div>
			</div>
		</div>
	</div>
	<div id="pa-slider" class="card map-sidebar toggle-display">
		<div class="card-body">
			<h5 class="card-title" style="cursor: pointer" id="pa-sidebar-header"><i class="ft-arrow-left"></i>&nbsp;&nbsp;Kết quả tìm kiếm</h5>
			<div id="pa-sidebar" class="m-custom-group" style="margin-top: 10px">
				<div class="row" id="pa-content">
				</div>
			</div>
		</div>
	</div>
